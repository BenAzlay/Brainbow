<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="About"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/InfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For the quiz, the default category is General Knowledge. You can change it in the Settings.\n
Each quiz sessions contains 10 questions. The user gains a point only when they select the right answer. Once they reach their goal, the must select a higher one." />
    <TextView
        android:id="@+id/InfoTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The running distance is determined by the number of steps ran. Considering a step is 70cm, the distance is simply the number of steps * 70cm." />
    <Button
        android:id="@+id/fragment1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="See app details" />
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="Back to main page" />

</LinearLayout>