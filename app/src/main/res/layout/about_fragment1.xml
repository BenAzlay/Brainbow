<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="About"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/InfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brainbow is an app created by Benjamin AZOULAY for the Mobile development module.\n
It allows the user (you) to train their intellect with quizzes about various subjects and train their physique by measuring their running distance.\n
In the Settings activity, you can set your goals and deadlines." />
    <Button
        android:id="@+id/fragment2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="See challenge details" />
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="Back to main page" />
</LinearLayout>